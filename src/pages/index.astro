	.swiper-button-prev {
		display: flex;
		width: 5rem;
		height: 5rem;
		background-color: var(--clr-white);
		border-radius: 50%;
		opacity: 0;
		pointer-events: none;
		transition: .2s ease-in-out;
		position: absolute;
		top: 50%;
		transform: translateY(-50%);

		&:hover {
			background-color: var(--clr-lemon);
		}
		&:hover::after {
			color: var(--clr-white);
		}

		&::after {
			// display: none;
			font-size: 2rem;
			font-weight: bolder;
			color: var(--clr-lemon);
			transition: .2s;
		}
	}

	&:hover .swiper-button-next,
	&:hover .swiper-button-prev {
		opacity: 1;
		pointer-events: initial;
	}

	.swiper-button-next {
		right: 5rem;
	}
	.swiper-button-prev {
