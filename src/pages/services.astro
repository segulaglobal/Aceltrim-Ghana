                <img src={Service1.src} alt="Aceltrim Group" />
                <img src={Service1.src} alt="Aceltrim Group" />
                <img src={Service1.src} alt="Aceltrim Group" />
                <img src={Service1.src} alt="Aceltrim Group" />
                <img src={Service1.src} alt="Aceltrim Group" />
                <img src={Service1.src} alt="Aceltrim Group" />
            </div>
        </div>
    </div>
    <!-- End of section Gallery -->

</MainLayout>