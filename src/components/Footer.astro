<style lang="scss">

.section-footer {
    background-color: var(--clr-black);
    color: var(--clr-gray-light);
    padding: 5rem 0 2rem;


    // Footer Logo
    .footer-logo {
        width: 200px;
    }
}
// End of footer logo




// Footer Terms
.terms-list {
    display: flex;
    margin: 3rem 0 0;

    .terms-item {

        &:not(:last-child) {
            margin-right: 2rem;
        }
    }

    .terms-link {
        display: inline-block;
        font-size: 1.5rem;
        transition: .4s;

        &:hover, &:focus {
            color: var(--clr-lemon);
            transform: scale(1.1);
        }
    }
}
// End of footer terms







// Social media icons
.social-list {
    display: flex;
    width: 100%;
    justify-content: center;
    margin: 5rem 0 0;

    .social-item {

        &:not(:last-child) {
            margin-right: 2rem;
        }
    }

    .social-link {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 6rem;
        height: 6rem;
        border: 2px solid #989898;
        border-radius: 50%;
        position: relative;
        z-index: 1;
        transition: .4s;
        overflow: hidden;

        i {
            transition: .4s;
        }

        &:hover i, &:focus i {
            transform: rotateY(360deg);
        }

        &:hover::after {
            top: 0;
        }

        &::after {
            content: "";
            width: 100%;
            height: 100%;
            background-image: linear-gradient(to right, var(--clr-lemon), var(--clr-lemon-dark));
            position: absolute;
            top: 100%;
            left: 0;
            transition: .4s;
            z-index: -1;
        }
    }
    // End of social media icons
}








.copy {
    width: 100%;
    color: darkgray;
    font-size: 1.4rem;
    text-align: center;
    margin-top: 5rem;
}

</style>